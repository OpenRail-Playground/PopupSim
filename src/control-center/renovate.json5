{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    // preset from https://git.tech.rz.db.de/renovate/renovate-presets
    'local>renovate/renovate-presets:default',
    'local>renovate/renovate-presets:bizhub',
    'local>renovate/renovate-presets:docker-deps',
    'local>renovate/renovate-presets:git-submodules',
    'local>renovate/renovate-presets:pipeship',
    'local>renovate/renovate-presets:pipeship-values-lib',
    "local>renovate/renovate-presets:testautomation",
    'group:monorepos'
  ],
  // the "disable-review" is used by pipeship to prevent creating a review environment
  // this saved ressource
  labels: ['Renovate', 'disable-review'],
  lockFileMaintenance: {
    enabled: true,
    platformAutomerge: true,
    automerge: true,
    schedule: ['after 11am and before 12pm']
  },
  packageRules: [
    {
      matchPackagePrefixes: ['pipeship:'],
      groupName: 'Pipeship',
      groupSlug: 'pipeship'
    },
    // group playwright package and docker image updates
    {
      groupName: 'playwright',
      matchPackagePatterns: ['^@playwright/test$']
    },
    {
      groupName: 'playwright',
      matchDatasources: ['docker'],
      matchPackageNames: ['mcr-docker-remote.bahnhub.tech.rz.db.de/playwright']
    }
  ]
}
